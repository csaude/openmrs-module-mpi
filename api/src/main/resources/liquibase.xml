<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="dchirinda" id="20250408-1100">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="mpi_initial_load_task_controller"/>
            </not>
        </preConditions>
        <comment>Adding mpi_initial_load_task_controller table</comment>

        <createTable tableName="mpi_initial_load_task_controller">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="is_running" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="patient_offset_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="start_date" type="DATETIME(3)">
                <constraints nullable="false"/>
            </column>

            <column name="end_date" type="DATETIME(3)">
            </column>

            <column name="is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
