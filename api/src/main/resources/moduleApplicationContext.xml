<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="mpiDAO" class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateMpiDAO">
        <property name="sessionFactory">
            <ref bean="sessionFactory" />
        </property>
    </bean>

    <bean name="mpiService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="${project.parent.groupId}.${project.parent.artifactId}.api.impl.MpiServiceImpl">
                <property name="dao" ref="mpiDAO" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>${project.parent.groupId}.${project.parent.artifactId}.api.MpiService</value>
                <ref bean="mpiService" />
            </list>
        </property>
    </bean>

</beans>
